{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es5", "es6", "es2015", "es2016", "es2017", "es2018", "esnext", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "declaration": true,
    "outDir": "dist",
    "types": [
      "@types/node",
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "include": ["./", "src/**/*"],
  "exclude": ["node_modules", "**/__tests__/*", "coverage", "dist"]
}
